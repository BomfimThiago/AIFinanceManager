# AI Finance Manager - Terraform Variables Example
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# Domain Configuration (optional - set to your actual domain)
# If you don't have a custom domain, leave as default
domain_name = "api.your-domain.com"

# Database Configuration
database_password = "your_secure_database_password_here"
database_instance_class = "db.t3.micro"
database_allocated_storage = 20

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# ECS Configuration
ecs_cpu = 512
ecs_memory = 1024
ecs_desired_count = 2

# Security Configuration
enable_deletion_protection = true
backup_retention_period = 7

# Monitoring Configuration
log_retention_days = 30

# S3 Configuration
s3_lifecycle_days = 90