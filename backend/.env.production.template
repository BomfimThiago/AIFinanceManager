# Konta - Production Environment Variables Template
# Copy this file to .env and fill in the actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password@your_db_host:5432/konta

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================
# JWT secret key - MUST be at least 32 characters long
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_very_secure_secret_key_at_least_32_characters_long

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# =============================================================================
# AI SERVICES CONFIGURATION (REQUIRED)
# =============================================================================
# Anthropic API key for AI features
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# =============================================================================
# Belvo API credentials for bank integrations
# Get from: https://dashboard.belvo.com/
BELVO_SECRET_ID=your_belvo_secret_id
BELVO_SECRET_PASSWORD=your_belvo_secret_password

# =============================================================================
# AWS CONFIGURATION (OPTIONAL - for production deployment)
# =============================================================================
# AWS region for services
AWS_REGION=us-east-1

# S3 bucket for file uploads
S3_BUCKET_NAME=your-production-bucket-name

# =============================================================================
# PRODUCTION DEPLOYMENT VARIABLES
# =============================================================================
# Domain name for the application
DOMAIN_NAME=api.your-domain.com

# Database password for Terraform
DATABASE_PASSWORD=your_secure_database_password

# =============================================================================
# CORS AND SECURITY HEADERS
# =============================================================================
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# =============================================================================
# APPLICATION METADATA
# =============================================================================
APP_NAME=Konta
APP_VERSION=1.0.0
API_PREFIX=/api

# =============================================================================
# DOCUMENTATION CONFIGURATION
# =============================================================================
# Environments where API docs should be shown (comma-separated)
SHOW_DOCS_ENVIRONMENTS=development,staging

# Documentation URLs (set to null in production)
DOCS_URL=null
REDOC_URL=null
OPENAPI_URL=null