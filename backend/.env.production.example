# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5433/finance_manager
POSTGRES_DB=finance_manager
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# API Keys (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
BELVO_SECRET_ID=your_belvo_secret_id_here
BELVO_SECRET_PASSWORD=your_belvo_secret_password_here

# Belvo Environment (sandbox or production)
BELVO_ENVIRONMENT=production

# JWT Configuration (IMPORTANT: Generate secure keys for production)
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_at_least_256_bits
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (Update with your frontend URLs)
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Application Environment
APP_ENV=production
LOG_LEVEL=info

# Optional: Security headers and additional configuration
SECURE_COOKIES=true
HTTPS_ONLY=true