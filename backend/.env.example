# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/finance_manager

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Services
ANTHROPIC_API_KEY=sk-ant-your-api-key

# AWS Bedrock (Optional - Alternative to Anthropic API)
USE_BEDROCK=false  # Set to true to use AWS Bedrock instead of Anthropic
BEDROCK_REGION=us-east-1  # Bedrock region (best availability in us-east-1)
AWS_REGION=eu-west-3  # Main AWS region for other services

# Sentry Error Monitoring
SENTRY_DSN=https://your-key@your-org.ingest.us.sentry.io/project-id

# CORS
CORS_ORIGINS=["http://localhost:8081","http://localhost:19006","http://localhost:3000"]

# Environment
ENVIRONMENT=development
DEBUG=true
